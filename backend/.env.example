
# Server
PORT=8080

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/korsana?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Strava OAuth (get from https://www.strava.com/settings/api)
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=http://localhost:8080/api/strava/callback

# AI Provider API Keys (use either Claude or Gemini, or both)
# Claude API Key (from https://console.anthropic.com/)
CLAUDE_API_KEY=

# Gemini API Key (from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# Environment
ENVIRONMENT=development
